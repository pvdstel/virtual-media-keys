<Application
    x:Class="VirtualMediaKeysUI.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Buttons.xaml" />
                <ResourceDictionary Source="Resources/Styles/OverlayWindow.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <SolidColorBrush x:Key="AccentColor">#FF333333</SolidColorBrush>
            <SolidColorBrush x:Key="ForegroundColor">White</SolidColorBrush>
        </ResourceDictionary>
    </Application.Resources>
</Application>
